{
  "verbose": true,
  "testEnvironment": "node",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "globals": {
    "ts-jest": {
      "tsconfig": {
        "target": "es6"
      }
    }
  },
  "testRunner": "jest-circus/runner",
  "setupFilesAfterEnv": ["jest-extended"],
  "rootDir": "../../../../",
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ]
}
